{
	"compilerOptions":
	{
		"target": "es2023",
		"lib": ["ES2023"],
		"module": "CommonJS",
		"esModuleInterop": true,
		"checkJs": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"declaration": false,
		"declarationMap": false,
		"strictNullChecks": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": false,
		"jsx": "react",
		"outDir": "./dist",
		"typeRoots": ["./types"]
	},
	"include": ["./src/**/*", "./types/global.d.ts"],
	"lib": ["esnext"]
}
